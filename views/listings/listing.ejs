<%layout("../layouts/boilerplate") %>
<div class="row mt-4">
  <div class="col-xxl-8 col-xlg-8 col-md-6 col-sm-4 offset-2 mb-4">
    <h3><%=listing.title%></h3>
  </div>
  <div class="col-xxl-8 col-xlg-8 col-md-6 col-sm-4 offset-2">
    <div class="card-img mb-3">
      <img
        class="listing-card-img-top"
        src="<%=listing.image.url%>"
        alt="Listing_Image"
      />
    </div>
    <div class="card-body mb-3">
      <p><%=listing.description%></p>
      <p>&#8377;<%=listing.price.toLocaleString("en-IN")%></p>
      <p><%=listing.location%></p>
      <p><%=listing.country%></p>
      <form action="/listings/<%=listing._id%>?_method=delete" method="post">
        <button class="btn btn-dark">Delete Listing</button>
      </form>
    </div>
    <button class="btn btn-dark listing-edit-btn">
      <a href="/listings/<%=listing._id%>/edit">Edit Listing</a>
    </button>
    <div>
      <form
        action="/listings/<%=listing.id%>/reviews"
        method="post"
        class="form needs-validation"
        novalidate
      >
        <hr />
        <div class="mb-3">
          <label for="rating" class="form-label">Leave a Review</label>
          <input
            type="range"
            name="review[rating]"
            id="rating"
            min="1"
            max="5"
            step="1"
            class="form-range"
          />
        </div>
        <div class="mb-3">
          <label for="comment">Comment</label>
          <textarea
            name="review[comment]"
            id="comment"
            rows="5"
            cols="20"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Comment Looks good!</div>
          <div class="invalid-feedback">Comment cannot be empty!</div>
        </div>
        <button class="btn btn-outline-dark mb-3">Submit</button>
      </form>
    </div>
    <div class="all-reviews">
      <h4><b>All Reviews</b></h4>
      <div class="row">
        <%for(let review of listing.reviews){%>
        <div class="card mb-3 col-5 ms-3 p-3">
          <div class="card-body">
            <h5 class="card-title">Jane Doe</h5>
            <p class="card-text"><%=review.comment%></p>
            <p class="card-text">Rating: <%=review.rating%> / 5 Stars</p>
          </div>
          <form
            action="/listings/<%=listing.id%>/review/<%=review.id%>?_method=delete"
            method="post"
            class="mt-3"
          >
            <button type="submit" class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        <%}%>
      </div>
    </div>
  </div>
</div>
